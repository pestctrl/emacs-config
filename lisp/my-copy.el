(require 'my-keymap)

(defun my/dynamic-yank ()
  (interactive)
  (when-let ((b (buffer-file-name)))
    (kill-new b)))

(define-key *root-map* (kbd "M-w") #'my/dynamic-yank)

(provide 'my-copy)
